@model MyWebFormApp.BLL.DTOs.ArticleCreateDTO
<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Article</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Add Article</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form method="post" action="/Articles/Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-validation-for="Title" for="Title">Article Title :</label>
                        <input asp-validation-for="Title" type="text" class="form-control" id="Title" name="Title"
                            placeholder="Insert Article Title" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-validation-for="Details" for="Details">Details :</label>
                        <input asp-validation-for="Details" type="text" class="form-control" id="Details" name="Details"
                            placeholder="Insert Article Detail" />
                        <span asp-validation-for="Details"></span>
                    </div>
                    @* <div class="form-group">
                    <label for="CategoryName">Category :</label>
                    <input type="text" class="form-control" name="CategoryName" placeholder="Insert Category" />
                    </div> *@
                    @* <div class="form-group">
                    <label for="PublishDate">Publish Date :</label>
                    <input type="text" class="form-control" name="PublishDate" placeholder="Insert Publish Date" />
                    </div> *@
                    <div class="form-group">
                        <label asp-validation-for="CategoryID" for="CategoryName">Category :</label>
                        <input asp-validation-for="CategoryID" type="text" class="form-control" name="CategoryID"
                            placeholder="Insert Category" />
                        <span asp-validation-for="CategoryID"></span>
                    </div>
                    @* <div class="form-group">
                    <label for="IsApprove">IsApprove :</label>
                    <input type="text" class="form-control" name="IsApprove" placeholder="IsApprove? " />
                    </div> *@
                    @* <div class="form-group mt-3 mb-3">
                    <label for="Pic">Upload Picture :</label>
                    <input class="form-control" type="file" id="formFile" name="ImageArticle">
                    </div> *@
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                        </div>
                        <div class="custom-file">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                            <input type="file" class="custom-file-input" id="formFile" name="ImageArticle">
                        </div>
                    </div>
                    <img id="previewImage" src="" alt="Preview" class="img-thumbnail"
                        style="max-width: 300px; display: none;">
                    @Html.RadioButton("isApproved", "True", true) Approved
                    @Html.RadioButton("isApproved", "False") Approved
                    <br>

                    <input type="Submit" value="Create" class="btn btn-success btn-sm" />
                </form>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}