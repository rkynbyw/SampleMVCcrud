<div class="row">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Home Page</h1>
	</div>

	<div class="col-lg-12">
		<!-- Basic Card Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Home Page</h6>
			</div>
			<div class="card-body">
				Welcome to the home page of the application. <br /><br />
				

                <div class="row mt-5">
                    @{
                        if (ViewBag.role != null && ViewBag.role.Count > 0)
                        {
                            foreach (var role in ViewBag.role)
                            {
                                <div class="col">
                                    @if (role.RoleName == "admin")
                                    {
                                        <h5>Admin Action</h5>
                                        <a asp-action="ListUser" asp-controller="users" class="btn btn-primary mb-3">User Role Management</a>
                                        <br />
                                        <a asp-action="Index" asp-controller="Articles" class="btn btn-primary mb-3">View List Article</a> <br />
                                        <a asp-action="Index" asp-controller="Categories" class="btn btn-primary mb-3">View List Category</a>
                                    }
                                    else if (role.RoleName == "contributor")
                                    {
                                        <h5>Contributor Action</h5>
                                        <a asp-action="Index" asp-controller="Articles" class="btn btn-primary mb-3">View List Article</a> <br />
                                        <a asp-action="Index" asp-controller="Categories" class="btn btn-primary mb-3">View List Category</a>
                                    }
                                    else if (role.RoleName == "reader")
                                    {
                                        <h5>Reader Action</h5>
                                        <a asp-action="Index" asp-controller="Articles" class="btn btn-primary mb-3">View List Article</a> <br />
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col">
                                <p>No roles available.</p>
                                
                            </div>
                        }
                    }
                </div>
                @ViewBag.Message

            </div>


		</div>

	</div>

</div>
